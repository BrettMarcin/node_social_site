<div class="form-group">
    <label for="userPost">Create a new Post:</label>
    <form action="/users/processPostProfile" method="post" id="postForm">
        <textarea class="form-control" rows="3" name="userPost" id="userPost" maxlength="140"></textarea>
        <input type="submit" class="btn btn-info" value="Submit" required>
    </form>
</div>
<% if(postArray.length > 1) { %>
<% for(var i = postArray.length - 1; i > 0; i--) { %>
<div class="panel panel-default post-panel">
    <div class="panel-body row">
        <div class="col-sm-1">
            <img src="<%=postArray[i].theUser.img.data%>" width="50" height="50"></img>
        </div>
        <div class="col-sm-11">
            <p class="post-title"><%= postArray[i].theUser.first + ' ' +  postArray[i].theUser.last%> |  <span class="post-owner"> @<%=postArray[i].theUser.username%> </span>
                <span class="post-creation"> | <%=postArray[i].thePost.date%></span>
            </p>
            <p class="post-content"><%= postArray[i].thePost.content%></p>
        </div>
        <div class="col-sm-12">
            <p class="post-links">
                <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                <% var liked = false %>
                <% for(var j= 0; postArray[i].thePost.likes.length; i++) { %>
                <% if(currentUser.id == postArray[i].thePost.likes[j]) { %>
                <% liked = true%>
                <% break } %>
                <% } %>
                <% if(liked) {%>
                <span class="glyphicon glyphicon-heart g-links" aria-hidden="true" style="color: red;" onclick="removeLike('<%=(postArray[i].thePost).id + ', ' + theUser.id%>')"></span>
                <% } else { %>
                <span class="glyphicon glyphicon-heart g-links" aria-hidden="true" onclick="addLike('<%=(postArray[i].thePost).id+ ', ' + theUser.id %>')"></span>
                <% } %>
                <a href="">View Conversations</a>
            </p>
        </div>

    </div>
</div>
<% } /*) */%>
<% } %>