<div class="panel panel-default post-panel">
    <row>
        <div class="col-sm-10">
            <div class="profile-pic">
                <img src="<%=theUser.img.data%>" width="200" height="200" ></img>
            </div>
            <p><%= theUser.first + ' ' + theUser.last %> @<%=theUser.username%></p>
            <% if(theUser.username != currentUser.username) {%>
            <% var found = false%>
            <% for(var i = 0; i < theUser.followers.length; i++) {%>
            <% if(theUser.followers[i].theID === currentUser.id) { %>
            <% found = true%>
            <% } %>
            <% } %>
            <% if(found) { %>
            <button class="btn btn-sm btn-primary btn-block" type="submit" onclick="unfollowUser('<%= theUser.id %>')">Following</button>
            <% } else {%>
            <button class="btn btn-sm btn-primary btn-block" type="submit" onclick="followUser('<%= theUser.id %>')">Follow</button>
            <% } %>
            <% } %>

            <h3>Followers: <%= theUser.followers.length%></h3>
            <h3>Following: <%= theUser.following.length%></h3>
        </div>
    </row>
</div>
